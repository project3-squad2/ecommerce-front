<div class="show-cart">

  <p class="price">Price: ${{monster.price}} </p>
  <p class="name">Name: {{monster.name}} </p>

  <form id="form">
    <fieldset>
      <p>Quantity: <input type="number" min="1" placeholder="1"></p>
      <input type="text" style="display: none" value="{{monster.name}}">
      <input type="number" style="display: none" value="{{monster.price}}">
      <input type="text" style="display: none" value="{{monster._id}}">
    </fieldset>

  <button type="button" class="btn btn-warning delete-monster" data-monster-id="{{_id}}" data-toggle="modal" data-target="#add-monster-modal">Checkout</button>

  </form>
</div>
